<mah:MetroWindow x:Class="Tempus.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:local="clr-namespace:Tempus"
    Title="Tempus" WindowStartupLocation="CenterScreen" 
    MinWidth="300" MinHeight="125" ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightCyan" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="4,5,20,1"/>
            <Setter Property="FontFamily" Value="LCD"/>
            <Setter Property="FontSize" Value="78"/>        
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="4,1,4,10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    
    <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <TextBlock Name="ElapsedTimeTextBlock">
            12:34.56
            </TextBlock>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Name="StartStopButton" Content="⏵" />
                <Button Name="SplitButton" Content="⏸" />
                <Button Name="ResetButton" Content="⏱" />
                <Button Name="SettingsButton" Content="⚙" />
                <Button Name="AboutButton" Content="❔" />
            </StackPanel>
        </StackPanel>
    </Viewbox>
</mah:MetroWindow>
    